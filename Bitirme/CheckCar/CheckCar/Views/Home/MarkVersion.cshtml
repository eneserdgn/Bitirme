@using CheckCar.Models;
@model List<MarkVersion>
@{
    ViewBag.Title = "MarkVersion";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    int a = 0;
}
<main class="wrapper">
    <div id="main">
        <div class="row-5">
            <div class="title"><h1> Fiyat Listesi</h1></div>

            <div class="login">
                <div class="btn-group" role="group">
                    <a rel="nofollow" class="btn btn-danger" href="/uye/uye-ol">Üye Ol</a>
                    <a rel="nofollow" class="btn btn-danger" href="/uye/uye-girisi">Giriş Yap</a>
                </div>
            </div>
        </div>
        <ol class="breadcrumb2">
            <li><a title="arabalar" href="/">Ana Sayfa</a></li>
            <li><a title="Sıfır Araba Fiyatları" href="/araba-fiyatlari">Araba Fiyatları</a></li>
            <li><a title="Alfa Romeo Fiyat Listesi" href="/alfa-romeo"><span>Alfa Romeo</span></a></li>
        </ol>
        <div class="marka-list">
            @foreach (var item in Model)
            {
                if (a == 0)
                {
                    <div class="left-side-logo"><img width="140" height="140" src="~/Image/MarkImage/@item.Mark.MarkImage" /></div>
                    a = 1;
                }

            }
            <div class="list-group">
                @foreach (var version in Model)
                {
                    <a class="list-group-item" href="/Home/Release/@version.ID">@version.VersionName</a>
                }
            </div>
        </div><!-- left-side end-->

        <div class="right-side2">
            <!-- right-side start-->
            <div id="models">
                @foreach (var version in Model)
                {
                    <div class="model">
                        <div class="modelthumb"><a href="/Home/Release/@version.ID"><img alt="Giulietta" src="~/Image/VersionImage/@version.VersionImage" /></a></div>
                        <div class="modelname"><h2><a title="Alfa Romeo Giulietta Fiyatları" href="/Home/Release/@version.ID">@version.VersionName</a></h2></div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="clear"></div>

    <div id="marka-haber">
        <div class="row">

            <div class="col-xs-3 col-md-3">
                <div class="thumbnail">
